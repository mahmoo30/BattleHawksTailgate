<h1>Upcoming Games</h1>
<ul class="game-list">
  {{#each tailgates}}
    <li>
      <a href="/event/{{ this.id }}">
        <div class="game-details">
          <img src="{{ this.battlehawks_logo }}" alt="Home Team Logo" class="team-logo" />
          <img src="{{ this.opposing_logo }}" alt="Away Team Logo" class="team-logo" />
          <p>{{ this.event_date }}</p>
          <p>Attending: {{ this.attendees.length }}</p>
        </div>
      </a>
    </li>
  {{/each}}
</ul>