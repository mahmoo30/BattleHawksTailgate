<div class="container">
  <h2>Go Battlehawks!!!</h2>
  <section class="customer-logos slider">
     
      <div class="slide"><img src="/images/battlehawks.png"></div>
      <div class="slide"><img src="/images/brahmas.png"></div>
      <div class="slide"><img src="/images/defenders.png"></div>
      <div class="slide"><img src="/images/guardians.png"></div>
      <div class="slide"><img src="/images/renegades.png"></div>
      <div class="slide"><img src="/images/roughnecks.png"></div>
      <div class="slide"><img src="/images/sea-dragons.png"></div>
      <div class="slide"><img src="/images/vipers.png"></div>
      
     
      

  </section>
</div>

<h1>Upcoming Games</h1>
<ul class="game-list">
  {{#each tailgates}}
      {{#if this.home_game}}
        <li class="home">
        <a href="/tailgate/{{ this.tailgate_id }}">
      {{else}}
        <li class="away">
      {{/if}}
        <div class="game-details">
          <img src="{{ this.away_logo }}" alt="Away Team Logo" class="team-logo" />
          <span class="at-sign">@</span>
          <img src="{{ this.home_logo }}" alt="Home Team Logo" class="team-logo" />
          <p>{{ this.event_date }}</p>
          {{#if this.home_game}}
          <p class="tailgate-attending">Attending: {{ this.attendees.length }}</p>
          {{else}}
          <p class="tailgate-attending">Away Game</p>
          {{/if}}
        </div>
      {{#if this.home_game}}
        </a>
      {{/if}}
    </li>
  {{/each}}
</ul>