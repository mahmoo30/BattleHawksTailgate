<h1>{{ title }}</h1>
<img src="{{ teamLogo }}" alt="{{ title }} logo" class="team-logo" />
<p>{{ date }}</p>
<p>Hosted by {{ user.username }}</p>

<h2>Attendees</h2>
<ul class="attendees-list">
  {{#each attendees}}
    <li>
      <p>{{ this.username }} is bringing {{ this.dish.name }} for {{ this.dish.servings }} people</p>
    </li>
  {{/each}}
</ul>

{{#if logged_in}}
  <form action="/event/{{ id }}/attend" method="POST">
    <label for="dish">What are you bringing?</label>
    <input type="text" id="dish" name="dish">
    <label for="servings">How many people will this serve?</label>
    <input type="number" id="servings" name="servings">
    <input type="submit" value="I'm attending!">
  </form>
{{else}}
  <p>You must be logged in to attend this event.</p>
{{/if}}
